# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           				controllers.Application.index
POST	/Authenticate								controllers.Application.authenticate

GET		/Player										controllers.PlayerControler.index


#GameSeries
GET		/GameSeries									controllers.GameSeriesControler.newSeries
GET		/GameSeries/:id								controllers.GameSeriesControler.view(id: Long, filter: Option[Int], normalized: Option[Int])
GET		/GameSeries/:id/Games						controllers.GameSeriesControler.viewAllGames(id: Long)
POST	/GameSeries/:id/upload						controllers.GameSeriesControler.upload(id: Long)
POST	/GameSeries/:id/completeUpload				controllers.GameSeriesControler.completeUpload(id: Long)
POST	/GameSeries/:id								controllers.GameSeriesControler.save(id: Option[Long])
POST	/GameSeries/								controllers.GameSeriesControler.create

#Game
GET		/GameSeries/:seriesid/Games/:gameid			controllers.GameController.view(seriesid: Long, gameid: Long) 

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               				controllers.Assets.at(path="/public", file)
